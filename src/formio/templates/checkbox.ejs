<label class="denhaag-form-control-label" for="{{ctx.instance.id}}-{{ctx.component.key}}">
    <span class="denhaag-form-control-label__input">
        <span class="denhaag-checkbox">
            <{{ctx.input.type}}
              ref="input"
              {% for (var attr in ctx.input.attr) { %}
              {{attr}}="{{ctx.input.attr[attr]}}"
              {% } %}
              id="{{ctx.instance.id}}-{{ctx.component.key}}"
              {% if (ctx.checked) { %}checked=true{% } %}
              class="denhaag-checkbox__input"
            >
                {{ctx.input.content}}
            </{{ctx.input.type}}>
            <span class="denhaag-checkbox__icon">
                <span class="denhaag-icon"></span>
            </span>
        </span>
    </span>
    <span class="denhaag-form-control-label__label">
        {{ctx.input.label}}&nbsp;
        {% if (ctx.component.tooltip) { %}
            <i ref="tooltip" class="{{ctx.iconClass('question-sign')}}"></i>
        {% } %}
    </span>
</label>
